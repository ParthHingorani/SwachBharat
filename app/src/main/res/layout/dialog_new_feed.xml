<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:text="@string/newPost"
        android:textColor="#009acd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_feed_title"
        android:hint="@string/feedTitle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_feed_content"
        android:hint="@string/feedContent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="10dp">

        <Button
            android:text="@string/Cancel"
            android:textColor="#009acd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_feed_dialog_cancel"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        <Button
            android:text="@string/Post"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_feed_dialog_post"
            android:backgroundTint="#009acd" 
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />
        
        <!-- NOTE - background tint is applicable after API 21 only -->
        
    </LinearLayout>
</LinearLayout>
